<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.riak</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>A key-value store with delusions of grandeur.</string>

      <key>Port</key>
      <integer><%= @port %></integer>
    </dict>

    <key>SoftResourceLimits</key>
    <dict>
      <key>NumberOfFiles</key>
      <integer>1024</integer>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= @executable %></string>
      <string>start</string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <false />

    <key>UserName</key>
    <string><%= scope.lookupvar "::luser" %></string>

    <key>WorkingDirectory</key>
    <string><%= @datadir %></string>

    <key>StandardErrorPath</key>
    <string><%= @logdir %>/console.log</string>

    <key>StandardOutPath</key>
    <string><%= @logdir %>/console.log</string>
  </dict>
</plist>
