<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.github.riak</string>

    <key>GitHub</key>
    <dict>
      <key>Description</key>
      <string>A key-value store with delusions of grandeur.</string>

      <key>Port</key>
      <integer><%= scope.lookupvar "riak::config::port" %></integer>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "riak::config::executable" %></string>
      <string>start</string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <false />

    <key>UserName</key>
    <string><%= scope.lookupvar "::luser" %></string>

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "riak::config::datadir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "riak::config::logdir" %>/console.log</string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "riak::config::logdir" %>/console.log</string>
  </dict>
</plist>
